<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update a user</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <%= JSON.stringify(userEdit) %>
    <div class="topnav">
      <a href="/">Home</a>
      <a href="/create">Create User</a>
    </div>

    <div class="form-add-new">
      <form action="/update-user" method="post">
        <fieldset>
          <legend>Update a user</legend>

          <div class="input-group d-none">
            <label>Id: </label>
            <input type="text" name="userId" value="<%= userEdit.id %>" />
          </div>

          <div class="input-group">
            <label>Email: </label>
            <input type="text" name="herEmail" value="<%= userEdit.email %>" />
          </div>

          <div class="input-group">
            <label>Name: </label>
            <input type="text" name="herName" value="<%= userEdit.name %>" />
          </div>
          <div class="input-group">
            <label>City: </label>
            <input type="text" name="herCity" value="<%= userEdit.city %>" />
          </div>
          <div>
            <button>Add</button>
          </div>
        </fieldset>
      </form>
    </div>
  </body>
</html>
